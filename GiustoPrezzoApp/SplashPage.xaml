<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GiustoPrezzoApp.SplashPage">
   <ScrollView>
        <StackLayout BackgroundColor="#2196F3">
            
            <Label x:Name="Messaggio" Margin ="40" Text="Scegli la categoria &#10;e il numero di prezzi da indovinare" HorizontalTextAlignment="Center" TextColor="White" FontSize="24"/>
            <Image x:Name="Logo" WidthRequest="300"></Image>
            <StackLayout Margin="20">
                <Picker x:Name="pkrCategoria" Title="Scegli la categoria" MinimumWidthRequest="300" HorizontalOptions="Center"></Picker>
            </StackLayout>
            <StackLayout x:Name="Bottoni" Orientation="Horizontal" HorizontalOptions="Center">
                <ImageButton x:Name="btn1" ClassId="1" WidthRequest="60" Clicked="btn_Clicked"/>
                <ImageButton x:Name="btn2" ClassId="2" WidthRequest="60" Clicked="btn_Clicked"/>
                <ImageButton x:Name="btn3" ClassId="3" WidthRequest="60" Clicked="btn_Clicked"/>
                <ImageButton x:Name="btn4" ClassId="4" WidthRequest="60" Clicked="btn_Clicked"/>
                <ImageButton x:Name="btn5" ClassId="5" WidthRequest="60" Clicked="btn_Clicked"/>
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
